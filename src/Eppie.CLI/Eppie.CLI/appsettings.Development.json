{
    "Serilog": {
        "MinimumLevel": {
            "Default": "Verbose",
            "Override": {
                "Microsoft": "Debug",
                "System": "Debug"
            }
        },
        "WriteTo": [
            {
                "Name": "Logger",
                "Args": {
                    "configureLogger": {
                        "WriteTo": [
                            {
                                "Name": "Console",
                                "Args": {
                                    "restrictedToMinimumLevel": "Information"
                                }
                            }
                        ],
                        "Filter": [
                            {
                                "Name": "ByIncludingOnly",
                                "Args": {
                                    "expression": "(SourceContext <> 'Eppie.CLI.Services.Application') or (@p['scope'] = 'console')"
                                }
                            }
                        ]
                    }
                }
            },
            {
                "Name": "Async",
                "Args": {
                    "configure": [
                        {
                            "Name": "Debug",
                            "Args": {
                                "restrictedToMinimumLevel": "Debug"
                            }
                        },
                        {
                            "Name": "File",
                            "Args": {
                                "path": "./logs/dev-.json",
                                "rollingInterval": "Day",
                                "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog"
                            }
                        }
                    ],
                    "blockWhenFull": true
                }
            }
        ],
        "Enrich": [ "FromLogContext", "WithEnvironmentName", "WithMachineName", "WithThreadId", "WithThreadName" ]
    }
}
