{
    "Console": {
        "CultureInfo": "en",
        "EncodingName": "utf-8"
    },
    "MailOptions": {
        "Servers": {
            "Gmail": {
                "SMTP": "smtp.gmail.com",
                "SMTPPort": "465",
                "IMAP": "imap.gmail.com",
                "IMAPPort": "993"
            },
            "Outlook": {
                "SMTP": "smtp-mail.outlook.com",
                "SMTPPort": "587",
                "IMAP": "outlook.office365.com",
                "IMAPPort": "993"
            },
            "Other": {
                "SMTP": "",
                "SMTPPort": "465",
                "IMAP": "",
                "IMAPPort": "993"
            }
        }
    },
    "Serilog": {
        "Using": [
            "Serilog.Enrichers.Environment",
            "Serilog.Enrichers.Process",
            "Serilog.Enrichers.Thread",
            "Serilog.Expressions",
            "Serilog.Formatting.Compact",
            "Serilog.Sinks.Async",
            "Serilog.Sinks.Console",
            "Serilog.Sinks.Debug",
            "Serilog.Sinks.File"
        ],
        "MinimumLevel": {
            "Default": "Debug",
            "Override": {
                "Microsoft": "Information",
                "System": "Information"
            }
        },
        "WriteTo": [
            {
                "Name": "Logger",
                "Args": {
                    "configureLogger": {
                        "WriteTo": [
                            {
                                "Name": "Console",
                                "Args": {
                                    "restrictedToMinimumLevel": "Warning"
                                }
                            }
                        ],
                        "Filter": [
                            {
                                "Name": "ByExcluding",
                                "Args": {
                                    "expression": "SourceContext = 'Eppie.CLI.Services.Application'"
                                }
                            }
                        ]
                    }
                }
            },
            {
                "Name": "Async",
                "Args": {
                    "configure": [
                        {
                            "Name": "Debug"
                        },
                        {
                            "Name": "File",
                            "Args": {
                                "path": "./logs/log-.json",
                                "rollingInterval": "Day",
                                "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
                            }
                        }
                    ]
                }
            }
        ],
        "Enrich": [ "FromLogContext", "WithThreadId" ]
    }
}
