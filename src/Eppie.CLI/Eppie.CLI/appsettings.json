{
    "Console": {
        "CultureInfo": "en",
        "EncodingName": "utf-8"
    },
    "Serilog": {
        "Using": [
            "Serilog.Enrichers.Environment",
            "Serilog.Enrichers.Process",
            "Serilog.Enrichers.Thread",
            "Serilog.Expressions",
            "Serilog.Formatting.Compact",
            "Serilog.Sinks.Async",
            "Serilog.Sinks.Console",
            "Serilog.Sinks.Debug",
            "Serilog.Sinks.File"
        ],
        "MinimumLevel": {
            "Default": "Error"
        },
        "WriteTo": [
            {
                "Name": "Logger",
                "Args": {
                    "configureLogger": {
                        "WriteTo": [
                            {
                                "Name": "Console"
                            }
                        ],
                        "Filter": [
                            {
                                "Name": "ByExcluding",
                                "Args": {
                                    "expression": "SourceContext = 'Eppie.CLI.Services.Application'"
                                }
                            }
                        ]
                    }
                }
            }
        ],
        "Enrich": [ "FromLogContext", "WithThreadId" ]
    }
}
