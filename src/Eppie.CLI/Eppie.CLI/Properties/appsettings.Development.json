{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Verbose",
      "Override": {
        "Microsoft": "Debug",
        "System": "Debug"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "Debug",
              "Args": {
                "restrictedToMinimumLevel": "Debug"
              }
            },
            {
              "Name": "File",
              "Args": {
                "path": ".\\logs\\dev-.json",
                "rollingInterval": "Day",
                "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog"
              }
            }
          ],
          "blockWhenFull": true
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithEnvironmentName", "WithMachineName", "WithThreadId", "WithThreadName" ]
  }
}
